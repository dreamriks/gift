escription="For example: #ffffff. Slect wmode transperant if you dont want background color"/><param name="images_path" type="text" default="components/com_virtuemart/shop_image/product/" label="Images Path" description="Contains the relative path to the images folder, which will be used by the final Flash. ex. images/stories/images/ " /> <param name="rel_urls" type="list" default="1" label="Use relative paths in xml" description="Use relative paths instead absolute urls for links and images in generated xml files">	<option value="1">No</option>	<option value="2">Yes</option></param><param name="wmode" type="list" default="transparent" label="wmode" description="Select the wmode of flash">	<option value="opaque">opaque</option>	<option value="transparent">transparent</option>	<option value="window">window</option></param><param name="roundCorner" type="text" default="0" label="Round Corner" description="0,1,2,3...,10(most often used),11..."/><param name="autoPlayTime" type="text" default="8" label="Auto Play Time" description="Auto Play Time"/><param name="isHeightQuality" type="list" default="no" label="Height Quality" description="Height Quality">	<option value="yes">yes</option>	<option value="no">no</option></param><param name="transDuration" type="text" default="1" label="Transition Duration" description="Transition Duration"/><param name="windowOpen" type="list" default="_blank" label="Target" description="Window Open Target parameter" > 					<option value="_self">_self</option>			<option value="_blank">_blank</option>			<option value="_parent">_parent</option></param><param name="btnSetMargin" type="text" default="auto 5 5 auto" label="Button Set Margin" description="Button Set Margin"/><param name="btnDistance" type="text" default="20" label="Button Distance" description="Button Distance"/><param name="titleBgColor" type="text" default="0x000000" label="Title Background Color" description="Title Background Color"/><param name="titleTextColor" type="text" default="0xffffff" label="Title Text Color" description="Title Text Color"/><param name="titleBgAlpha" type="text" default=".4" label="Title Background Alpha" description="Title Background Alpha"/><param name="titleMoveDuration" type="text" default="1" label="Title Move Duration" description="Title Move Duration"/><param name="btnAlpha" type="text" default=".4" label="Button Alpha" description="Button Alpha"/><param name="btnTextColor" type="text" default="0xffffff" label="Button Text Color" description="Button Text Color"/><param name="btnDefaultColor" type="text" default="0x1B3433" label="Button Default Color" description="Button Default Color"/><param name="btnHoverColor" type="text" default="0xff9900" label="Button Hover Color" description="Button Hover Color"/><param name="btnFocusColor" type="text" default="0xff6600" label="Button Focus Color" description="Button Focus Color"/><param name="changImageMode" type="list" default="click" label="Change Image Mode" description="Change Image Mode">	<option value="click">click</option>	<option value="hover">hover</option></param><param name="isShowBtn" type="list" default="yes" label="Show Button" description="Show Button">	<option value="yes">yes</option>	<option value="no">no</option></param><param name="randomorder" type="list" default="no" label="Random Order" description="Show slides randomly. Show Button setting should be NO for this">	<option value="yes">yes</option>	<option value="no">no</option></param><param name="isShowTitle" type="list" default="yes" label="Show Title" description="Show Title">	<option value="yes">yes</option>	<option value="no">no</option></param><param name="scaleMode" type="list" default="noScale" label="Scale Mode" description="Scale Mode">	<option value="showAll">showAll</option>	<option value="exactFit">exactFit</option>	<option value="noScale">noScale</option>	<option value="noBorder">noBorder</option></param><param name="transform" type="list" default="blur" label="Transform" description="Transform">	<option value="blur">blur</option>	<option value="alpha">alpha</option>	<option value="left">left</option>	<option value="right">right</option>	<option value="top">top</option>	<option value="bottom">bottom</option>	<option value="breathe">breathe</option>	<option value="breathBlur">breathBlur</option>	<option value="barsConverge">barsConverge</option>	<option value="blindsUp">blindsUp</option>	<option value="barsFlip">barsFlip</option>	<option value="blindsOpen">blindsOpen</option>	<option value="stripes">stripes</option>	<option value="iris">iris</option>	<option value="blindsMovingDown">blindsMovingDown</option>	<option value="barsRight">barsRight</option>	<option value="squaresFlip">squaresFlip</option>	<option value="barsWavy">barsWavy</option>	<option value="blendHardLight">blendHardLight</option>	<option value="blendMultiply">blendMultiply</option>	<option value="blendDifference">blendDifference</option>	<option value="barsIntersect">barsIntersect</option>	<option value="squaresLight">squaresLight</option>	<option value="blindsWave">blindsWave</option>	<option value="blendAddative">blendAddative</option>	<option value="squaresScale">squaresScale</option>	<option value="barsLeft">barsLeft</option>	<option value="barsMovingLeft">barsMovingLeft</option>	<option value="barsOpen">barsOpen</option>	<option value="blindsConverge">blindsConverge</option>	<option value="blindsDown">blindsDown</option>	<option value="blindsMovingUp">blindsMovingUp</option>	<option value="philoAlpha">philoAlpha</option>	<option value="philoBlurSquare">philoBlurSquare</option>	<option value="philoClouds">philoClouds</option>	<option value="philoDisc">philoDisc</option>	<option value="philoFlipHorizontal">philoFlipHorizontal</option>	<option value="philoFloatingWaves">philoFloatingWaves</option>	<option value="philoMultipleFlip">philoMultipleFlip</option></param><param name="isShowAbout" type="list" default="no" label="Show About" description="Show About">	<option value="yes">yes</option>	<option value="no">no</option></param><param name="titleFontSize" type="text" default="14" label="Title font size" description="Title font size"/><param name="show_price" type="list" default="yes" label="Show Price" description="Select yes or no to show or hide price" > 	<option value="yes">yes</option>	<option value="no">no</option></param><param name="currency" type="text" default="$" label="Currency Symbol" description="Currency Symbol" />  <param name="pricetax" type="list" default="yes" label="Display prices with tax" description="Display prices with tax">	<option value="yes">yes</option>	<option value="no">no</option></param><param name="catppv_flag" type="list" default="2" label="Fix IE cache bug" description="IE cache bug: Different instances of module shows only the first one loaded category. If enabled different categories and swf file names will be created for each shown category." > 	<option value="1">yes</option>	<option value="2">no</option></param><param name="xml_fname" type="text" default="a" label="XML file name" description="XML file name without extension. Used for different instances. Mandatory for multiple instances on one page."/><param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" /></params></install>