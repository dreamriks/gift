<?xml version="1.0" ?>
<mosinstall version="1.1.0" type="jceplugin" plugin="productsnap">
	<name>Product Snapshot Manager</name>
	<version>1.1.2</version>
	<creationDate>29. August 2007</creationDate>
	<author>Soeren Eberhardt</author>
	<authorEmail>soeren|at|virtuemart.net</authorEmail>
	<authorUrl>http://virtuemart.net/</authorUrl>
	<copyright>Soeren Eberhardt 2007, All rights reserved</copyright>
	<license>GPL</license>
	<description><![CDATA[ 
		<style type="text/css">dt { font-style: oblique; font-weight: bold; } </style>
		<h3>JCE PLUGIN for VirtueMart</h3>
		<p>Product Snapshot Mambot Manager plugin for JCE, version 1.1.2</p>
		<dl>
			<dt>Version 1.1.2</dt>
			<dd>fixed the plugin for JCE 1.1.6<br />
				plus Javascript Fixes for Internet Explorer 6+7
			</dd>
			<dt>Version 1.1.0 beta2</dt>
			<dd>initial version</dd>
		</dl>		
	]]></description>
	<icon>virtuemart</icon>
	<layout_icon>virtuemart</layout_icon>
	<elements></elements>
	<files>
		<filename plugin="productsnap">editor_plugin.js</filename>
		<filename>products.php</filename>
		<filename>manager.php</filename>
        <filename>view.php</filename>
		<filename>classes/index.html</filename>
        <filename>classes/manager.class.php</filename>
        <filename>css/products.css</filename>
        <filename>css/index.html</filename>
        <filename>css/manager.css</filename>
        <filename>images/virtuemart.gif</filename>
        <filename>images/index.html</filename>
        <filename>images/package.png</filename>
        <filename>images/sample.gif</filename>
        <filename>images/spacer.gif</filename>
        <filename>index.html</filename>
        <filename>index.php</filename>
        <filename>jscripts/index.html</filename>
        <filename>jscripts/manager.js</filename>
        <filename>jscripts/products.js</filename>
        <filename>jscripts/selectableelements.js</filename>
        <filename>langs/en.js</filename>
        <filename>langs/en.php</filename>
        <filename>langs/index.html</filename>
    </files>
	<params>
       
        <param name="hspace" type="text" default="5" label="Default HSpace value" description="Default HSpace value"/>
        <param name="vspace" type="text" default="5" label="Default VSpace value" description="Default VSpace value"/>
        <param name="border" type="text" default="0" label="Default Border value" description="Default Border value"/>
        <param name="container_align" type="list" default="left" label="Default Container Align value" description="Default Container Align value">
                <option value="default">Default</option>
                <option value="top">Top</option>
                <option value="middle">Middle</option>
                <option value="bottom">Bottom</option>
                <option value="left">Left</option>
                <option value="right">Right</option>
        </param>
    </params>
</mosinstall>
